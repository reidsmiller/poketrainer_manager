<%= link_to 'Pokemon Index', '/pokemons' %>

<h1>Poketrainer Index Page</h1>

<%= form_with url: "/poketrainers", method: :get, local: true do |form| %>
  <%= form.text_field :exact_match_search %>
  <%= form.submit 'Exact Match Search' %>
<% end %>

<%= link_to 'New Poketrainer', '/poketrainers/new' %>
<%= link_to 'Sort by Number of Pokemon Caught', sort_by: "pokemon_caught_desc" %>

<% @poketrainers.each do |poketrainer| %>
  <h2><%= poketrainer.name %></h2>
  <p>Pokemon Caught: <%= poketrainer.pokemon_count %></p>
  <%= button_to "Edit #{poketrainer.name}", "/poketrainers/#{poketrainer.id}/edit", method: :get %>
  <%= button_to "Delete #{poketrainer.name}", "/poketrainers/#{poketrainer.id}", method: :delete %>
<% end %>